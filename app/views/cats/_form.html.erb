<% unless flash[:errors].nil? %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<form action="<%= action_url %>" method='post'>
  <input type='hidden' name="_method" value="<%= hidden_method %>">
  <label for='cat-name'>Name:</label>
  <input type="text" name="cat[name]" id="cat-name" value="<%= cat.name %>" >
  <br><br>

  <label for='cat-sex'>Sex:</label>
  <input type="radio" name="cat[sex]" id="cat-sex-m"
    value='m' <%= "checked" if 'm' == cat.sex %> >
  <label for='cat-sex-m'>Male</label>
  <input type="radio" name="cat[sex]" id="cat-sex-f"
    value='f' <%= "checked" if 'f' == cat.sex %> >
  <label for='cat-sex-f'>Female</label>
  <br><br>

  <label for='cat-color'>Color:</label>
  <select name='cat[color]' id=cat-color>
    <option></option>
    <% Cat::VALID_COLORS.each do |color| %>
      <option value="<%= color %>" <%= "selected" if color == cat.color %>>
        <%= color %>
      </option>
    <% end %>
  </select>
  <br><br>

  <label for='cat-birth-date'>Birth Date:</label>
  <input type="date" name="cat[birth_date]" id="cat-birth-date"
    value="<%= cat.birth_date.to_s %>" >
  <br><br>

  <label for='cat-description'>Description:</label>
  <br>
  <textarea name='cat[description]' id='cat-description'>
    <%= cat.description %>
  </textarea>
  <br><br>
  <input type="submit" value="<%= submit_value %>">
</form>
