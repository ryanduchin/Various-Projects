<form action="<%= action_val %>" method="post">
  <%= csrf_tag %>

  <label>Username
    <input type="text" name="user[username]" value="<%= @user.username %>">
  </label>

  <label>Password
    <input type="text" name="user[password]">
  </label>

  <input type="submit" value="<%= submit_val %>">
</form>
