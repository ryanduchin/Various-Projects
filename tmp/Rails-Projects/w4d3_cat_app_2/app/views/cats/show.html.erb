<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex, :owner_name].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>

<h2>Rental Requests</h2>
<p>
  <%= link_to "Request this cat", new_cat_rental_request_url %>
  <!-- add default name value -->
</p>
<table>
  <tr>
    <th>Requester</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>

    <% @cat.rental_requests.includes(:user).order("start_date").each do |req| %>
      <%= render "req_tr", req: req %>
    <% end %>
</table>
